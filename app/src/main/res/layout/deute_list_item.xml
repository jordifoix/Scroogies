<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:weightSum="3"
    android:layout_height="100dp">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:weightSum="7"
        android:layout_weight="2"
        android:layout_margin="5dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:id="@+id/nameText"
            android:text="Aitor Tilla"
            android:textStyle="normal|bold"
            android:layout_marginStart="10dp"
            android:textAlignment="textStart" />

        <TextView
            android:text="666666666"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:id="@+id/telephoneText"
            android:textStyle="normal|italic"
            android:layout_marginStart="10dp"
            android:textAlignment="textStart" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_weight="3"
            android:layout_height="0dp"
            android:id="@+id/leftButtonsLayout">

            <Button
                android:text="Whatsapp"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:id="@+id/whatsappButton"
                android:layout_weight="1" />

            <Button
                android:text="Més pastuki"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:id="@+id/mesPastukiButton"
                android:layout_weight="1" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:weightSum="14"
        android:layout_margin="5dp" >

        <TextView
            android:text="Li dec:"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="3"
            android:id="@+id/decDeuText"
            android:gravity="center"
            android:textStyle="normal|italic" />

        <TextView
            android:text="420.0 €"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="5"
            android:id="@+id/deuteTotalText"
            android:gravity="right|center_vertical"
            android:textStyle="normal|bold"
            android:textAlignment="textEnd"
            android:textSize="18sp"
            android:layout_marginEnd="10dp" />

        <Button
            android:text="Pagar"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="6"
            android:id="@+id/pagarCobrarButton" />
    </LinearLayout>
</LinearLayout>